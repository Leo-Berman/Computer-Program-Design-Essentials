// system include files
//
#include <stdio.h>

// main: myprog
//
// This is a driver program that does some very simple things.
//
int main(int argc, const char** argv) {

  // declare a variable for status
  //
  int status = (int)0;
  
  // declare some variables
  //
  long i = 27;
  float x = 27.2727;
  int cool = 0;
  
  // display a message to the terminal
  //
  fprintf(stdout, "program name: %s\n", argv[0]);
  fprintf(stdout, " sum of %d and %f is %f\n", i, x, i + x);

  // exit gracefully
  //
  return(status);
}
